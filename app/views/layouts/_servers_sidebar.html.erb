<div data-controller="sidebar" class="fixed top-0 left-0 h-screen w-16 m-0 flex flex-col bg-gray-900 text-white shadow z-10">
  <%= link_to "#", class:"sidebar-icon group" do %>
    <i class="fas fa-home"></i>
    <%= render partial: "shared/tooltip", locals: { display_text: "Home" } %>
  <% end %>
  <% servers_with_general_channel.each do |server| %>
    <%= link_to server_channel_path(server, server.channels[0].id), class: 'sidebar-icon group' do %>
      <i class="far fa-gem"></i>
      <%= render partial: "shared/tooltip", locals: { display_text: server.name } %>
    <% end %>
  <% end %>
  <%= link_to new_server_path, class: "sidebar-icon group", data: { turbo_frame: "modal" } do %>
    <i class="fas fa-plus"></i>
    <%= render partial: "shared/tooltip", locals: { display_text: "Add server" } %>
  <% end %>
</div>
