<div class="flex flex-row rounded-lg bg-gray-800 p-3 my-2 justify-between">
  <div>
    <h2 class="text-lg mb-5"><%= server.name %></h2>
    <p class="text-xs"><%= server.members.count %> Members</p>
  </div>
  <% if server.server_member?(current_user) %>
    <%= link_to "Leave server", leave_server_path(server), class: "btn btn-outline-danger self-start"%>
  <% else %>
    <%= link_to "Join server", join_server_path(server), class: "btn btn-outline-primary self-start"%>
  <% end %>
</div>
