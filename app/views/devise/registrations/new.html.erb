<div class="flex flex-col justify-center w-full">
  <div class="w-full max-w-xs self-center">
    <h2 class="text-2xl font-semibold my-5">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: "bg-white shadow-md rounded px-8 pt-6 pg-8 mb-4")) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-200 text-sm font-bold mb-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :username, class: "block text-gray-200 text-sm font-bold mb-4" %>
        <%= f.text_field :username, autocomplete: "username", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-200 text-sm font-bold mb-4" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-200 text-sm font-bold mb-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4 flex flex-row">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
        <div class="self-center ml-5">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
