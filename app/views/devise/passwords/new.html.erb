<div class="flex flex-col justify-center w-full">
  <div class="w-full max-w-xs self-center">
    <h2 class="text-2xl font-semibold my-5">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "bg-white shadow-md rounded px-8 pt-6 pg-8 mb-4" ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-200 text-sm font-bold mb-4" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: "btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
