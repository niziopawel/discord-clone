<%= render layout: "/shared/modal", locals: { title: "Edit channel" } do %>
  <div class="flex justify-between items-center mx-4 mt-4">
    <h2 class="text-white-800 font-semibold text-xl text-center">Edit server</h1>
    <%= button_to "Delete", 
      @channel, 
      method: :delete, 
      class: "btn btn-danger", 
      form: { data: { 
        turbo_confirm: "Are you sure?", 
        turbo_frame: "_top",
        controller: "confirmation",
        action: "confirmation#confirm",
        message: "Are you sure?"
      } } %>
  </div>
  <%= render partial: "channels/form", locals: { channel: @channel, server: nil } %>
<% end %>
