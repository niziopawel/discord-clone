<%= form_with model: [channel, message], id: "message_form", class: "flex flex-row bg-gray-600 rounded-lg justify-between overflow-hidden appearance-none p-2 border-none" do |form| %>
  <%= form.text_field :body, required: true, class: "bg-transparent w-full py-0 text-md border-none outline-0 focus:border-0 focus:outline-0 focus:shadow-0 focus:ring-0" %>
  <%= form.submit "Send", class: "btn btn-primary text-xs" %> 
<% end %>